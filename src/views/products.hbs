<h1>Listado de productos</h1>

<h2>Categor√≠as</h2>
<ul>
  <a href="/products">Todos los productos</a>
  <a href="/products?category=Celulares">Celulares</a>
  <a href="/products?category=Tablets">Tablets</a>
  <a href="/products?category=Computers">Computers</a>
</ul>

<div >
  {{#each payload}}
        <h3>{{this.title}}</h3>
        <p>${{this.price}}</p>
        <p>{{this.description}}</p>
      </div>
      <div>
        <button class="add-to-cart-button" data-product-id="{{this._id}}">Agregar al carrito</button>
      </div>
    </div>
  {{/each}}
</div>

{{#if prevLink}}
  <a href="{{prevLink}}">Anterior</a>
{{/if}}

{{#if nextLink}}
  <a href="{{nextLink}}">Siguiente</a>
{{/if}}

<script src="/js/products.js"></script>